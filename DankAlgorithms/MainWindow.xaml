<Window x:Class="DankAlgorithms.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DankAlgorithms"
        mc:Ignorable="d"
        Title="Dank Algorithms" Height="450" Width="800">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <Button Grid.Column="0" Grid.Row="0">Quick Sort</Button>
        <Label Grid.Column="1" Grid.Row="0" HorizontalAlignment="Right">Input Size:</Label>
        <TextBox Grid.Column="2" Grid.Row="0"></TextBox>
        <Label Grid.Column="3" Grid.Row="0" HorizontalAlignment="Right">Status:</Label>
        <TextBlock Grid.Column="4" Grid.Row="0" VerticalAlignment="Center">Running</TextBlock>

        <Button Grid.Column="0" Grid.Row="1">Insertion Sort</Button>
        <Label Grid.Column="1" Grid.Row="1" HorizontalAlignment="Right">Input Size:</Label>
        <TextBox Grid.Column="2" Grid.Row="1"></TextBox>
        <Label Grid.Column="3" Grid.Row="1" HorizontalAlignment="Right">Status:</Label>
        <TextBlock Grid.Column="4" Grid.Row="1" VerticalAlignment="Center">Not yet run</TextBlock>

        <Button Grid.Column="0" Grid.Row="2">Bubble Sort</Button>
        <Label Grid.Column="1" Grid.Row="2" HorizontalAlignment="Right">Input Size:</Label>
        <TextBox Grid.Column="2" Grid.Row="2"></TextBox>
        <Label Grid.Column="3" Grid.Row="2" HorizontalAlignment="Right">Status:</Label>
        <TextBlock Grid.Column="4" Grid.Row="2" VerticalAlignment="Center">Finished</TextBlock>
    </Grid>
</Window>
